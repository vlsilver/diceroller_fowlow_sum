<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp"
        android:background="@color/colorBackground">

        <TextView
            style="@style/NameStyleHeader"
            android:padding="@dimen/small_padding"
            android:layout_margin="@dimen/layout_margin"
            android:text="@string/name_activity2"></TextView>

        <ScrollView
            android:id="@+id/bio_scroll"
            android:layout_width="match_parent"
            android:layout_height="492dp"
            android:layout_margin="@dimen/layout_margin"
            android:padding="@dimen/small_padding">

            <TextView
                android:id="@+id/bio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/small_padding"
                android:text="@string/name_discription_app"></TextView>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:layout_margin="@dimen/layout_margin">

            <Button
                android:id="@+id/bt_back_1"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:fontFamily="@font/roboto"
                android:text="@string/bt_back_1"
                android:textSize="10sp"></Button>

            <Button
                android:id="@+id/bt_next_1"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto"
                android:text="@string/bt_next_1"
                android:textSize="10sp"></Button>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>