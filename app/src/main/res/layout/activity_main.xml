<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/NameStyleHeader"
            android:fontFamily="@font/roboto"
            android:layout_margin="@dimen/layout_margin"
            android:padding="@dimen/small_padding"
            android:text="@string/name_activity">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="456dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dice_1"
                    tools:src="@drawable/dice_1" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dice_1"
                    tools:src="@drawable/dice_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_roll_folowsum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/bt_rollsum_name_activity"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/bt_roll_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/bt_rollrandom_name_activity"
                    android:textStyle="bold"></Button>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill in the sum of dices:"
            android:textColor="@color/colorHeader"
            android:textStyle="italic"
            android:padding="8dp">
        </TextView>
        <EditText
            android:id="@+id/edt_1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:inputType="number"
            android:background="@color/colorEditext">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:layout_margin="@dimen/layout_margin">

            <Button
                android:id="@+id/bt_back_2"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:fontFamily="@font/roboto"
                android:text="@string/bt_back_1"
                android:textSize="10sp"></Button>

            <Button
                android:id="@+id/bt_next_2"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto"
                android:text="@string/bt_next_1"
                android:textSize="10sp"></Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>